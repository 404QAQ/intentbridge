{
  "name": "intentbridge",
  "version": "1.0.0",
  "description": "CLI tool that maintains project state and auto-generates CLAUDE.md for Claude Code context injection",
  "type": "module",
  "bin": {
    "ib": "./dist/bin/ib.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx bin/ib.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": ["cli", "claude", "context", "project-management", "claude-code", "intentbridge"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luohaoqi/intentbridge.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
