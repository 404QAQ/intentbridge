{
  "name": "intentbridge",
  "version": "3.0.0",
  "description": "AI-powered requirement management tool for Claude Code with natural language interface, MCP integration, and smart project scaffolding",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ib": "./dist/bin/ib.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && rm -rf dist/templates && cp -r src/templates dist/templates",
    "dev": "tsx bin/ib.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "intentbridge",
    "claude",
    "claude-code",
    "requirement-management",
    "project-management",
    "ai",
    "natural-language",
    "mcp",
    "model-context-protocol",
    "context-injection",
    "cli",
    "typescript",
    "developer-tools",
    "code-context",
    "progressive-understanding",
    "smart-scaffolding",
    "multi-project"
  ],
  "author": "IntentBridge Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/404QAQ/intentbridge.git"
  },
  "homepage": "https://github.com/404QAQ/intentbridge#readme",
  "bugs": {
    "url": "https://github.com/404QAQ/intentbridge/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "glob": "^13.0.3",
    "inquirer": "^13.2.2",
    "js-yaml": "^4.1.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/archiver": "^7.0.0",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@types/unzipper": "^0.10.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
